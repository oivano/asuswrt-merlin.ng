[Unit]
Description=FRRouting
Documentation=https://frrouting.readthedocs.io/en/latest/setup.html
Wants=network.target
After=network-pre.target systemd-sysctl.service
Before=network.target
OnFailure=heartbeat-failed@%n

[Service]
Nice=-5
Type=forking
NotifyAccess=all
StartLimitInterval=3m
StartLimitBurst=3
TimeoutSec=2m
WatchdogSec=60s
RestartSec=5
Restart=on-abnormal
LimitNOFILE=1024
PIDFile=/var/run/%I/watchfrr.pid
ExecStart=/usr/local/sbin/frrinit.sh start %I
ExecStop=/usr/local/sbin/frrinit.sh stop %I
ExecReload=/usr/local/sbin/frrinit.sh reload %I

[Install]
WantedBy=multi-user.target
